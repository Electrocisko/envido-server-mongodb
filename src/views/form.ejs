<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bordados-formulario producto</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <main class="container">
      <h1>Bordados Envido</h1>

      <a href="/admin"><button class="btn btn-secondary mb-3">Volver a Productos</button></a>

      <form class="w-50" id="formulario">
        <div class="mb-3">
          <label for="modelo" class="form-label">Modelo</label>
          <input
            type="text"
            class="form-control"
            id="modelo"
            placeholder="Ingrese Modelo"
            name="modelo"
            required
          />
        </div>

        <select
          name="categoria"
          class="form-select"
          aria-label="Default select example"
        >
          <option selected>Seleccione categoría</option>
          <option value="gorras">Gorras</option>
          <option value="parches">Parches</option>
          <option value="collares">Collares</option>
          <option value="otros">Otros</option>
        </select>

        <div class="mb-3">
          <label for="descripcion" class="form-label">Descripción</label>
          <textarea
            name="descripcion"
            rows="3"
            cols="1"
            class="form-control"
            id="descripcion"
            placeholder="Ingrese Descripción"
            name="descripcion"
          ></textarea>
        </div>

        <div class="mb-3 d-flex justify-content-between align-items-end">
          <div>
            <label for="precio" class="form-label">Precio</label>
            <input
              required
              type="number"
              class="form-control"
              id="precio"
              placeholder="Ingrese Precio"
              name="precio"
            />
          </div>
     

          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" name="onstock" >
            <label class="form-check-label" for="flexSwitchCheckChecked">Sin stock</label>
          </div>


        </div>
        <div class="mb-3">
          <label for="imagen" class="form-label">Imagen</label>
          <input
            type="file"
            class="form-control"
            id="imagen"
            placeholder="Adjunte Precio"
            name="file"
          />
        </div>

      


        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>

      
    </main>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>

    <script>
      const form = document.getElementById("formulario");
      const route = "api/ingresar";

      form.addEventListener("submit", (e) => {
        e.preventDefault();
        let data = new FormData(form);
        let checkStock = data.get("onstock")
        checkStock ? data.append("nostock", true) : data.append("nostock", false)

        fetch(route, {
          method: "POST",
          headers: {
            Authorization: "<%= token %>",
          },
          body: data,
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.status === "success") {
              Swal.fire("Agregado!");
              form.reset();
            } else {
              Swal.fire(data.message);
            }
          });
      });
    </script>
  </body>
</html>
