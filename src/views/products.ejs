<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body class="container">
    <h1>Lista de productos</h1>

    <a href="/form"><button class="btn btn-success  mb-5"> Ingresar Producto Nuevo</button></a>
    <a href="/"><button class="btn btn-success  mb-5"> Home</button></a>

    

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Imagen</th>
          <th scope="col">Modelo</th>
          <th scope="col">Precio</th>
          <th scope="col">id</th>
          <th scope="col">Stock</th>
          <th scope="col">Actualizado </th>
          <th scope="col">Acciones</th>
     
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(element => { %>
        <tr>
          <td>
            <img
              src="./images/<%= element.image %>"
              alt="Imagen no disponible"
              style="height: 50px"
            />
          </td>
          <th><%= element.modelo %></th>
          <td>$<%= element.precio %></td>
  
          <td  style="font-size: 12px" scope="row"><%= element._id %></td>
      

          <% if (element.nostock) { %>
            <td  style="font-size: 12px; color: red;" scope="row">SIN STOCK</td>
          <% } %> 

          <% if (!element.nostock) { %>
            <td  style="font-size: 12px" scope="row">-</td>
          <% } %> 
           
          <td  style="font-size: 12px" scope="row"><%= element.iat %></td>
          <td>
            <button
              onclick="updatedItem('<%= element._id %>')"
              class="btn btn-warning btn-sm modified"
              name="<%= element._id %>"
            >
              Modificar
            </button>
          </td>
          <td>
            <button
              onclick="confirmOperacion('<%= element._id %>','<%= token %>')"
              class="btn btn-danger btn-sm delete"
              name="<%= element._id %>"
            >
              Eliminar
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>

    <script>
      const confirmOperacion = (id, token) => {
        Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it!",
        }).then((result) => {
          if (result.isConfirmed) {
            deleteItem(id, token);
          }
        });
      };

      // Function que hace fetch y manda el id y token

      const deleteItem = (id, token) => {
        let url = `api/eliminar/${id}`;

        fetch(url, {
          method: "DELETE",
          headers: {
            Authorization: token,
          },
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.status === "error") {
              Swal.fire(data.message);
            }
            if (data.status === "success") {
              Swal.fire("Borrado!");
            }
          })
          .catch((error) => console.log(error))
          .finally(window.location.reload());
      };
      //funcion que me manda al formulario con el id en params
      function updatedItem(id) {
        window.location.href = `/modificar/${id}`;
      }
    </script>
  </body>
</html>
